<?xml version="1.0" encoding="utf-8"?>


<!-- res/layout/dialog_income_input.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Date Selection -->
    <LinearLayout
        android:id="@+id/layoutSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Date"
            android:textColor="#000"
            android:textSize="20sp" />

        <!-- You can add a DatePicker widget here -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6D6D6" />

    <!-- Income Type -->
    <LinearLayout
        android:id="@+id/layoutIncomeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Income Type"
            android:textColor="#000"
            android:textSize="20sp" />

        <!-- You can add an EditText widget for income type here -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6D6D6" />

    <!-- Income Amount -->
    <LinearLayout
        android:id="@+id/layoutIncomeAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Income Amount"
            android:textColor="#000"
            android:textSize="20sp" />

        <!-- You can add an EditText widget for income amount here -->
    </LinearLayout>

    <!-- Save and Cancel buttons -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6D6D6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSaveIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />

        <Button
            android:id="@+id/btnCancelIncome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>

