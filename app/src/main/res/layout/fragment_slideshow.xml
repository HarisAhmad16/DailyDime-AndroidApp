<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/dialog_expense_input.xml -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Date Selection -->
    <LinearLayout
        android:id="@+id/layoutSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Date"
            android:textColor="#000"
            android:textSize="20sp" />

        <!-- You can add a DatePicker widget here -->
        <!-- For example:
             <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6D6D6" />

    <!-- Expense Type -->
    <LinearLayout
        android:id="@+id/layoutExpenseType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Expense Type"
            android:textColor="#000"
            android:textSize="20sp" />

        <!-- You can add an EditText widget for expense type here -->
        <!-- For example:
             <EditText
                android:id="@+id/etExpenseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        -->
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6D6D6" />

    <!-- Expense Amount -->
    <LinearLayout
        android:id="@+id/layoutExpenseAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Expense Amount"
            android:textColor="#000"
            android:textSize="20sp" />

        <!-- You can add an EditText widget for expense amount here -->
        <!-- For example:
             <EditText
                android:id="@+id/etExpenseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        -->
    </LinearLayout>

    <!-- Save and Cancel buttons -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D6D6D6" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSaveExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save" />

        <Button
            android:id="@+id/btnCancelExpense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel" />
    </LinearLayout>

</LinearLayout>
