<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000"
    tools:context=".ui.income.IncomeFragment">

    <TextView
        android:id="@+id/textIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Income Tracker Page"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="188dp">

        <TextView
            android:id="@+id/currentBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="152dp"
            android:layout_marginTop="20dp"
            android:text="$10,500"

            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="124dp"
            android:text="Current Balance"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currentBalance" />

        <Button
            android:id="@+id/btnIncome"
            android:layout_width="118dp"
            android:layout_height="82dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="8dp"
            android:text="+ Income"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No income items yet."
            android:gravity="center"
            android:visibility="gone" />
        <TextView
            android:id="@+id/allIncomes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All Incomes"
            android:gravity="left"
            android:textColor="#000000" />

        <!-- ListView for displaying items with icons and text views -->
        <ListView
            android:id="@+id/listViewIncomes"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:clipToPadding="false"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="0.5dp"
            android:clickable="false"
            android:focusable="false"/>

        <TextView
            android:id="@+id/totalIncome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Income: $8,500"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>


</LinearLayout>
